#include <iostream>
using namespace std;


template <class T>
T sum(T arr[], int n) {
    T s = 0;
    for (int i = 0; i < n; i++) {
        s += arr[i];
    }
    return s;
}

int main() {
    int i;
    
   
    int a[] = {99, 12, 67, 0};
    int n1 = sizeof(a) / sizeof(a[0]);
    cout<<"the sum:"<<endl;
    cout << " int array = " << sum(a, n1) << endl;

    float b[] = {1.2, 0.5, 3.3};
    int n2 = sizeof(b) / sizeof(b[0]);
    cout << " float array = " << sum(b, n2) << endl;

    double c[] = {2.2, 3.3, 4.4};
    int n3 = sizeof(c) / sizeof(c[0]);
    cout << "double array = " << sum(c, n3) << endl;


    long d[] = {9848L, 233L, 776556L};
    int n4 = sizeof(d) / sizeof(d[0]);
    cout << " long array = " << sum(d, n4) << endl;

    return 0;
}
